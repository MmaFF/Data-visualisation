{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Line Chart Showing Number of Trips Over Time",
    "data": { "url": "data/2.1 Short-term visitor arrivals.csv" },
    "mark": "line",
    "width": 800,
    "height": 400,
    "encoding": {
      "x": {
        "field": "date",
        "type": "temporal",
        "title": "Date",
        "axis": { "labelAngle": -45 }
      },
      "y": {
        "field": "trip",
        "type": "quantitative",
        "title": "Number of Trips"
      },
      "tooltip": [
        { "field": "date", "type": "temporal", "title": "Date" },
        { "field": "trip", "type": "quantitative", "title": "Number of Trips" }
      ]
    }
  }