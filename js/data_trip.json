{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Line Chart Showing Number of Trips Over Time",
    "data": {
        "url": "data/2.1 Short-term visitor arrivals.csv",
        "format": {
            "type": "csv",
            "parse": {
                "date": "utc:'%b-%Y'"
            }
        }
    },
    "mark": "line",
    "width": 800,
    "height": 400,
    "encoding": {
        "x": {
            "field": "date",
            "type": "temporal",
            "title": "Date",
            "axis": {
                "labelAngle": -45,
                "format": "%b %Y"
            }
        },
        "y": {
            "field": "trip",
            "type": "quantitative",
            "title": "Number of Trips"
        },
        "tooltip": [
            { "field": "date", "type": "temporal", "title": "Date", "format": "%b %Y" },
            { "field": "trip", "type": "quantitative", "title": "Number of Trips" }
        ]
    }
}