{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Number of trips per month from 15 to 24 years",
    "data": {
        "url": "data/2.1 Short-term visitor arrivals.csv",
        "format": {
            "type": "csv",
            "parse": {
                "date": "utc:'%b-%Y'"
            }
        }
    },
    "mark": "line",
    "width": 800,
    "height": 400,
    "transform": [
        {
            "filter": {
                "field": "date",
                "timeUnit": "yearmonth",
                "range": [{"year": 2015, "month": "january"}, {"year": 2024, "month": "december"}]
            }
        }
    ],
    "encoding": {
        "x": {
            "field": "date",
            "type": "temporal",
            "title": "Date",
            "axis": {
                "labelAngle": -45,
                "format": "%b %Y"
            }
        },
        "y": {
            "field": "trip",
            "type": "quantitative",
            "title": "Number of Trips"
        },
        "tooltip": [
            { "field": "date", "type": "temporal", "title": "Date", "format": "%b %Y" },
            { "field": "trip", "type": "quantitative", "title": "Number of Trips" }
        ]
    },
    "selection": {
        "brush": {
            "type": "interval",
            "encodings": ["x"]
        }
    }
}