{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Short-term tourism data for different states",
  "data": {
    "url": "js/AUS_state.topojson",
    "format": {
      "type": "topojson",
      "feature": "AUS_state"
    }
  },
  "transform": [
    {
      "lookup": "properties.name_en",
      "from": {
        "data": {
          "url": "data/Short-term visitor - July 2024.csv",
          "format": {
            "type": "csv"
          }
        },
        "key": "region",
        "fields": ["trips"]
      }
    }
  ],
  "mark": {
    "type": "geoshape",
    "stroke": "white"
  },
  "projection": {
    "type": "mercator"
  },
  "encoding": {
    "color": {
      "field": "trips",
      "type": "quantitative",
      "title": "Number of Trips",
      "scale": {
        "scheme": "blues"
      }
    },
    "tooltip": [
      { "field": "properties.name_en", "type": "nominal", "title": "State" },
      { "field": "trips", "type": "quantitative", "title": "Number of Trips", "format": "," }
    ]
  },
  "width": 800,
  "height": 600
}